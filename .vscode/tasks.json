{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "build-sdk",
            "type": "shell",
            "command": "pnpm",
            "args": ["build"],
            "options": {
                "cwd": "${workspaceFolder}/sdk"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "build-editor",
            "type": "shell",
            "command": "pnpm",
            "args": ["build"],
            "options": {
                "cwd": "${workspaceFolder}/editor"
            },
            "dependsOn": ["build-sdk"],
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "tauri-dev",
            "type": "shell",
            "command": "pnpm",
            "args": ["tauri", "dev"],
            "options": {
                "cwd": "${workspaceFolder}/desktop"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Running.*$",
                    "endsPattern": "^.*Finished.*$"
                }
            }
        },
        {
            "label": "build-and-run-tauri",
            "dependsOn": ["build-editor", "tauri-dev"],
            "dependsOrder": "sequence",
            "group": "build"
        }
    ]
}
