{
  "name": "esengine",
  "version": "0.4.0",
  "type": "module",
  "description": "Modular TypeScript SDK for ESEngine - A lightweight 2D game engine for Web and WeChat MiniGames",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./wasm": {
      "import": "./dist/wasm.js",
      "types": "./dist/wasm.d.ts"
    },
    "./scene": {
      "import": "./dist/scene/index.js",
      "types": "./dist/scene/index.d.ts"
    },
    "./assets": {
      "import": "./dist/assets/index.js",
      "types": "./dist/assets/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "game-engine",
    "ecs",
    "webgl",
    "wechat-minigame",
    "typescript",
    "modular"
  ],
  "author": "ESEngine Team",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.5",
    "minigame-api-typings": "^3.8.16",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.0",
    "rollup-plugin-dts": "^6.1.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/esengine/esengine.git"
  }
}
